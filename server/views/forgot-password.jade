extends layouts/default
block body-content
  .container(style='margin-top: 100px')
    .page-header
      h1 Password Reset
      p.lead
        | Enter your new password below.
      form.form(role='form', action='/forgot-password/reset')
        .row
          .col-md-6
            .form-group
              label(for='password')
              input.form-control(
                type='password',
                id='password',
                name='password',
                placeholder='Password'
              )
          .col-md-6
            .form-group
              label(for='confirm')
              input.form-control(
                type='confirm',
                id='confirm',
                name='confirm',
                placeholder='Confirm Password'
              )
        input(
          type='hidden',
          name='key',
          value=locals.key
        )
        input(
          type='hidden',
          name='username',
          value=locals.username
        )
        button.btn.btn-default(type='submit')='Submit'

