{
  "name": "api",
  "version": "0.0.0",
  "description": "Backend API for Versapp",
  "main": "index.js",
  "scripts": {
    "jshint": "jshint server/",
    "start": "NODE_ENV='local' nodemon --watch server/ index.js",
    "dev": "NODE_ENV='development' node index.js",
    "prod": "NODE_ENV='production' node index.js",
    "forever-dev": "NODE_ENV='development' forever start index.js",
    "forever-prod": "NODE_ENV='production' forever start index.js",
    "production": "NODE_ENV='production' node index.js",
    "build": "grunt sass",
    "watch": "grunt sass && grunt watch",
    "dtest": "npm test && npm test",
    "test": "NODE_ENV='test' mocha test/ --recursive -R nyan",
    "tap-test": "NODE_ENV='test' mocha test/ --recursive -R tap",
    "testd": "NODE_ENV='test' node-debug node_modules/.bin/_mocha test/ --recursive -R nyan",
    "cover": "NODE_ENV=test istanbul cover --report cobertura --print detail _mocha -- -R nyan test/ --recursive --timeout=20000",
    "view-cover": "istanbul report html && open ./coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:ganemone/api.git"
  },
  "author": "Giancarlo Anemone",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^5.10.1",
    "chai": "^1.9.1",
    "grunt": "^0.4.5",
    "grunt-browserify": "^2.1.4",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-sass": "^0.8.1",
    "grunt-contrib-watch": "^0.6.1",
    "istanbul": "^0.3.0",
    "jshint": "^2.5.5",
    "load-grunt-tasks": "^0.6.0",
    "mocha": "^1.21.4",
    "nodemon": "^1.2.1",
    "rewire": "^2.1.0"
  },
  "dependencies": {
    "apn": "~1.6.2",
    "async": "^0.9.0",
    "basic-auth": "~1.0.0",
    "body-parser": "~1.9.0",
    "express": "^4.8.5",
    "jade": "^1.5.0",
    "lodash": "^2.4.1",
    "mysql": "^2.4.3",
    "node-gcm": "~0.9.12",
    "node-uuid": "~1.4.1",
    "nodemailer": "~1.2.1",
    "request": "^2.40.0",
    "shallow-settings": "^0.1.0",
    "underscore": "^1.7.0",
    "winston": "^0.8.0",
    "xml2js": "^0.4.4"
  }
}
