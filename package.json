{
  "name": "api",
  "version": "0.0.0",
  "description": "Backend API for Versapp",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV='development' nodemon --watch server/ index.js",
    "production": "NODE_ENV='production' node index.js",
    "build": "grunt sass",
    "watch": "grunt sass && grunt watch",
    "test": "NODE_ENV='test' mocha test/ --recursive -R spec",
    "testd": "NODE_ENV='test' mocha debug test/ --recursive -R spec",
    "cover": "NODE_ENV=test istanbul cover --report cobertura --print detail _mocha -- -R spec test/ --recursive --timeout=20000",
    "view-cover": "istanbul report html && open ./coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:ganemone/api.git"
  },
  "author": "Giancarlo Anemone",
  "license": "ISC",
  "devDependencies": {
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-sass": "^0.8.1",
    "chai": "^1.9.1",
    "grunt-contrib-watch": "^0.6.1",
    "mocha": "^1.21.4",
    "grunt": "^0.4.5",
    "nodemon": "^1.2.1",
    "grunt-browserify": "^2.1.4",
    "browserify": "^5.10.1",
    "grunt-cli": "^0.1.13",
    "load-grunt-tasks": "^0.6.0",
    "istanbul": "^0.3.0"
  },
  "dependencies": {
    "async": "^0.9.0",
    "express": "^4.8.5",
    "jade": "^1.5.0",
    "lodash": "^2.4.1",
    "mysql": "^2.4.3",
    "node-uuid": "~1.4.1",
    "nodemailer": "~1.2.1",
    "request": "^2.40.0",
    "shallow-settings": "^0.1.0"
  }
}
